{% extends 'base.html.twig' %}

{% block title %}Prestation{% endblock %}

{% block body %}
<div class="d-flex justify-content-between title">
    <h1>Prestation</h1>
    <a class="admin-link" href="{{ path('prestation_index') }}">
        <button class="btn admin-btn" role="button">retour</button>
    </a>
</div>
<table class="table">
    <tbody>
{#            <tr>#}
{#                <th>Id</th>#}
{#                <td>{{ prestation.id }}</td>#}
{#            </tr>#}
        <tr class="text-center">
            <th>Cibles</th>
            <td>{% for cible in prestation.cibles %}
                    {{ cible.nom }}
                {% endfor %}
            </td>
        </tr>
        <tr class="text-center">
            <th>Cat√©gorie</th>
            <td>{{ prestation.categorie.nom }}</td>
        </tr>
        <tr class="text-center">
            <th>Nom</th>
            <td>{{ prestation.nom }}</td>
        </tr>
        <tr class="text-center">
            <th>Modules</th>
            <td>{% for module in prestation.modules %}
                    {{ module.nom }}
                {% endfor %}
            </td>
        </tr>
        <tr class="text-center">
            <th>Description</th>
            <td>{{ prestation.description |raw}}</td>
        </tr>
        <tr class="text-center">
            <th>Prix</th>
            <td>{% for price in prestation.prices %}
                    <span>{{ price.value }}</span>
                {% endfor %}
            </td>
        </tr>
    </tbody>
</table>
<div class="container">
    <div class="row text-center mb-3">
        <div class="col">
            <a class="admin-link" href="{{ path('prestation_edit', {'id': prestation.id}) }}">
                <button class="btn admin-btn">editer</button>
            </a>
        </div>
        <div class="col">
            {{ include('prestation/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
