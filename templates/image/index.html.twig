{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between title">
        <h1>Image index</h1>
        <a href="{{ path('image_new') }}">Create new</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
{#                <th>Path</th>#}
{#                <th>Imgpath</th>#}
                <th>Image</th>
                <th>Alt</th>
                <th>Credit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
{#                <td>{{ image.path }}</td>#}
{#                <td>{{ image.imgpath }}</td>#}
                <td><img src="{{ asset(image.imgpath) }}" width= "150px"></td>
                <td>{{ image.alt |raw }}</td>
                <td>{{ image.credit |raw }}</td>
                <td>
                    <a href="{{ path('image_show', {'id': image.id}) }}">show</a>
                    <a href="{{ path('image_edit', {'id': image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
