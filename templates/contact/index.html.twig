{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center title">
        <h1>Messages</h1>
    </div>
    <table class="table">
        <thead>
            <tr class="text-center">
{#                <th>Id</th>#}
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Cible</th>
                <th>Catégorie</th>
                <th>Message</th>
                <th>Date d'envoi</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr class="text-center">
{#                <td>{{ contact.id }}</td>#}
                <td>{{ contact.lastname }}</td>
                <td>{{ contact.firstname }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.cible }}</td>
                <td>{{ contact.category }}</td>
                <td>{{ contact.message }}</td>
                <td>{{ contact.sent ? contact.sent|date('d-m-Y') : '' }}</td>
                <td class="data-center">
                    <a class="admin-link" href="{{ path('contact_show', {'id': contact.id}) }}">
                        <button class=" btn admin-btn" role="button">Voir</button>
                    </a>

                    {{ include('contact/_delete_form.html.twig') }}
{#                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Données non trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#    <a class="admin-link" href="{{ path('contact_new') }}">#}
{#        <button class="btn admin-btn" role="button">Creer</button>#}
{#    </a>#}
{% endblock %}
