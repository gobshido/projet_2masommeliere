<form class="admin-link" method="post" action="{{ path('contact_delete', {'id': contact.id}) }}"
      onsubmit="return confirm('Confirmer la suppression du message ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button class="btn admin-btn">supprimer</button>
</form>
