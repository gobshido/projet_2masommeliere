{% extends 'base.html.twig' %}

{% block title %}Actualite index{% endblock %}

{% block body %}
    <h1>Actualite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre_actualite</th>
                <th>Description_actualite</th>
                <th>Date_actualite</th>
                <th>Heure_actualite</th>
                <th>Lieu_actualite</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>
                <td>{{ actualite.id }}</td>
                <td>{{ actualite.titreActualite }}</td>
                <td>{{ actualite.descriptionActualite }}</td>
                <td>{{ actualite.dateActualite ? actualite.dateActualite|date('d-m-Y') : '' }}</td>
                <td>{{ actualite.heureActualite ? actualite.heureActualite|date('H:i') : '' }}</td>
                <td>{{ actualite.lieuActualite }}</td>
                <td><img src="{{ asset(actualite.image.imgpath) }}" width="150px"></td>
                <td>
                    <a href="{{ path('actualite_show', {'id': actualite.id}) }}">show</a>
                    <a href="{{ path('actualite_edit', {'id': actualite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actualite_new') }}">Create new</a>
{% endblock %}
