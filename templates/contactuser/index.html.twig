{% extends 'base.html.twig' %}

{% block title %}Contactuser index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between title">
        <h1>Informations personnelles</h1>
        <a class="admin-link" href="{{ path('contactuser_new') }}">
            <button class="btn admin-btn" role="button">Creer</button>
        </a>
    </div>

    <table class="table">
        <thead>
            <tr class="text-center">
{#                <th>Id</th>#}
                <th>Téléphone</th>
                <th>Jour ouverture</th>
                <th>Heure ouverture</th>
                <th>Heure fermeture</th>
                <th>Image</th>
                <th>Présentation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contactuser in contactusers %}
            <tr class="text-center">
{#                <td>{{ contactuser.id }}</td>#}
                <td>{{ contactuser.telephone }}</td>
                <td>{{ contactuser.jourOuverture }}</td>
                <td>{{ contactuser.heureOuverture ? contactuser.heureOuverture|date('H:i') : '' }}</td>
                <td>{{ contactuser.heureFermeture ? contactuser.heureFermeture|date('H:i') : '' }}</td>
                <td><img src="{{ asset(contactuser.image.imgpath) }}" width="150px"></td>
                <td>{{ contactuser.presentation |raw }}</td>
                <td class="data-center">
                    <a class="admin-link" href="{{ path('contactuser_show', {'id': contactuser.id}) }}">
                        <button class="btn admin-btn" role="button">Voir</button>
                    </a>
                    <a class="admin-link" href="{{ path('contactuser_edit', {'id': contactuser.id}) }}">
                        <button class="btn admin-btn" role="button">Editer</button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Données non trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
