{% extends 'base.html.twig' %}

{% block title %}Prix index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between title">
        <h1>Prix index</h1>
        <a href="{{ path('prix_new') }}">Create new</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Target price</th>
                <th>Value</th>
                <th>Devise</th>
                <th>IsDesactivated</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prix in prixes %}
            <tr>
                <td>{{ prix.id }}</td>
                <td>{% for targetprice in prix.targetprices %}
                        <div>{{ targetprice.nom }}</div>
                    {% endfor %}
                </td>
                <td>{{ prix.value }}</td>
                <td>{{ prix.devise }}</td>
                <td>{{ prix.isDesactivated ? 'Yes' : 'No' }}</td>

                <td>
                    <a href="{{ path('prix_show', {'id': prix.id}) }}">show</a>
                    <a href="{{ path('prix_edit', {'id': prix.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
