{% extends 'base.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
<div class="d-flex justify-content-between">
    <h1>Module</h1>
    <a class="admin-link" href="{{ path('module_index') }}">
        <button class="btn admin-btn" role="button">retour</button>
    </a>
</div>

    <table class="table">
        <tbody class="t-body-center">
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ module.nom }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ module.duree ? module.duree|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ module.description }}</td>
            </tr>
        </tbody>
    </table>


<div class="edit-btn">
    <a class="admin-link" href="{{ path('module_edit', {'id': module.id}) }}">
        <button class="btn admin-btn">editer</button>
    </a>
</div>
<div>
    {{ include('module/_delete_form.html.twig') }}
</div>
{% endblock %}
