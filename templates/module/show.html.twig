{% block title %}Module{% endblock %}

{% block body %}
    <h1>Module</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Nom_module</th>
                <td>{{ module.nomModule }}</td>
            </tr>
            <tr>
                <th>Duree_module</th>
