{% extends 'base.html.twig' %}

{% block title %}Pdf{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between title">
        <h1>Pdf</h1>
        <a class="admin-link" href="{{ path('pdf_new') }}">
            <button class="btn admin-btn" role="button">Creer</button>
        </a>
    </div>
    <table class="table">
        <thead>
            <tr class="text-center">
{#                <th>Id</th>#}
                <th>Chemin relatif</th>
                <th>Chemin absolu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pdf in pdfs %}
            <tr class="text-center">
{#                <td>{{ pdf.id }}</td>#}
                <td>{{ pdf.pathrelatif }}</td>
                <td>{{ pdf.pathabsolu }}</td>
                <td class="data-center">
                    <a class="admin-link" href="{{ path('pdf_show', {'id': pdf.id}) }}">
                        <button class="btn admin-btn" role="button">Voir</button>
                    </a>
                    <a class="admin-link" href="{{ path('pdf_edit', {'id': pdf.id}) }}">
                        <button class="btn admin-btn" role="button">Editer</button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Données non trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
